<%
admin_first = current_user.name
admin_sur = current_user.surname
admin_first_i = admin_first.chars.first
admin_sur_i = admin_sur.chars.first
join_date_month = current_user.created_at.to_date.strftime("%B")
join_date_year = current_user.created_at.year
user_count = User.count
pending_count = User.where(approved: false).count
transaction_count = Transaction.count
%>

<div class="flex container bg-gray-900 w-11/12 my-1.5 p-2.5 mx-auto h-40 text-white flex-wrap content-center">
    <div class="bg-blue-900 text-white p-1.5 w-28 h-28 font-bold text-gray-50 rounded-full flex items-center justify-center font-mono text-5xl"><%=admin_first_i%><%=admin_sur_i%></div>
    <div class="w-6/12 mx-3 p-2"><span class="text-3xl"><%=admin_first%> <%=admin_sur%></span><br /><span class="text-xl">Admin</span><br /><span class="text-xm">Joined <%=join_date_month%> <%=join_date_year%></span></div>
</div>

<div class="container flex w-11/12 mx-auto overflow-scroll">
    <div class="bg-gray-800 text-white p-1.5 w-2/12 text-xs text-left rounded-t-md">All Users (<%=user_count%>)</div>
    <div class="bg-gray-800 text-white p-1.5 w-2/12 text-xs text-left rounded-t-md">Pending Users (<%=pending_count%>)</div>
    <div class="bg-green-700 text-white p-1.5 w-2/12 text-xs text-left rounded-t-md">All Transactions (<%=transaction_count%>)</div>
</div>
<div class="container w-11/12 mx-auto h-9">
    <div class="flex ...">
        <div class="bg-green-900 h-9 text-white p-1.5 w-1/5">Date</div>
        <div class="bg-green-900 h-9 text-white p-1.5 w-1/5">Time</div>
        <div class="bg-green-900 h-9 text-white p-1.5 w-1/5">Stock</div>
        <div class="bg-green-900 h-9 text-white p-1.5 w-1/5">Buyer</div>
        <div class="bg-green-900 h-9 text-white p-1.5 w-1/5">Seller</div>
    </div>      
</div>
<div class="container w-11/12 mx-auto overflow-scroll h-96">
    <% @list_transactions.each do |transaction| %>
        <%transaction_stock = transaction.stock_id%>
        <%
        seller = ""
        if transaction.seller_id == nil
            seller = @stock.where(id: transaction.stock_id)[0].symbol
        else
            seller = @user.find(transaction.seller_id).name + " " + @user.find(transaction.seller_id).surname
        end
        %>
      <div class="flex ...">
        <div class="bg-green-800 text-white p-1.5 w-1/5 text-sm"><%= transaction.created_at.to_date %></div>
        <div class="bg-green-800 text-white p-1.5 w-1/5 text-sm"><%= transaction.created_at.in_time_zone('Hong Kong').strftime("%I:%M%p") %></div>
        <div class="bg-green-800 text-white p-1.5 w-1/5 text-sm"><%=@stock.where(id: transaction.stock_id)[0].name%></div>
        <div class="bg-green-800 text-white p-1.5 w-1/5 text-sm"><%=@user.find(transaction.buyer_id).name%> <%=@user.find(transaction.buyer_id).surname%></div>
        <div class="bg-green-800 text-white p-1.5 w-1/5 text-sm"><%=seller%></div>
      </div>      
    <% end %>
</div>
