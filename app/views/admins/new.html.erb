<div class="flex flex-col h-screen">
<div class="flex w-screen h-20 bg-blue-900 flex-wrap content-center justify-center text-white">
    <div class="text-center">Make New User<br /><%=link_to "Exit", '/all_users'%></div>
</div>
<div class="flex bg-white pt-10 w-screen h-screen flex-wrap content-center justify-center text-white">
<div class="w-1/2">
<%= form_with(model: @admin) do |form| %>
    <div class="md:flex md:items-center mb-6">
        <div class="md:w-1/3">
        <label class="block text-blue-500 font-bold md:text-right mb-1 md:mb-0 pr-4 ">
            <%= form.label :email %>
        </label>
        </div>
        <div class="bg-white appearance-none border-2 border-gray-200 rounded w-72 py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500">
            <%= form.text_field :email %>
        </div>
    </div>

    <div class="md:flex md:items-center mb-6">
        <div class="md:w-1/3">
        <label class="block text-blue-500 font-bold md:text-right mb-1 md:mb-0 pr-4 ">
            <%= form.label :name %>
        </label>
        </div>
        <div class="bg-white appearance-none border-2 border-gray-200 rounded w-72 py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500 ">
            <%= form.text_field :name %>
        </div>
    </div>
    
    <div class="md:flex md:items-center mb-6">
        <div class="md:w-1/3">
        <label class="block text-blue-500 font-bold md:text-right mb-1 md:mb-0 pr-4 ">
            <%= form.label :surname %>
        </label>
        </div>
        <div class="bg-white appearance-none border-2 border-gray-200 rounded w-72 py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500 ">
            <%= form.text_field :surname %>
        </div>
    </div>

    <div class="md:flex md:items-center mb-6">
        <div class="md:w-1/3">
        <label class="block text-blue-500 font-bold md:text-right mb-1 md:mb-0 pr-4 ">
            <%= form.label :balance %>
        </label>
        </div>
        <div class="bg-white appearance-none border-2 border-gray-200 rounded w-72 py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500 ">
            <%= form.number_field :balance %>
        </div>
    </div>

    <div class="md:flex md:items-center mb-6">
        <div class="md:w-1/3">
        <label class="block text-blue-500 font-bold md:text-right mb-1 md:mb-0 pr-4 ">
            <%= form.label :password %>
        </label>
        </div>
        <div class="bg-white appearance-none border-2 border-gray-200 rounded w-72 py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500 ">
            <%= form.password_field :password %>
        </div>
    </div>

    <div class="md:flex md:items-center mb-6">
        <div class="md:w-1/3">
        <label class="block text-blue-500 font-bold md:text-right mb-1 md:mb-0 pr-4 ">
            <%= form.label :password_confirmation %>
        </label>
        </div>
        <div class="bg-white appearance-none border-2 border-gray-200 rounded w-72 py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500 ">
            <%= form.password_field :password_confirmation %>
        </div>
    </div>

    <div class="md:flex md:items-center mb-6">
        <div class="md:w-1/3">
        <label class="block text-blue-500 font-bold md:text-right mb-1 md:mb-0 pr-4">
            <%= form.label :approved %>
        </label>
        </div>
        <div class="bg-white appearance-none border-2 border-gray-200 rounded w-72 py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500 ">
            <%= form.check_box :approved %>
        </div>
    </div>

    <div class="flex container flex-wrap content-center justify-center">
        <button class="bg-blue-500 bg-blue-500 hover:bg-blue-400 focus:shadow-outline focus:outline-none text-blue-900 font-bold py-2 px-4 rounded mb-10">
            <%= form.submit "Create User" %>
        </button>
    </div>
<% end %>
</div>
</div>
</div>