<div class="min-h-screen bg-gradient-to-br from-green-300 via-blue-500 to-purple-600 flex justify-center items-center">
  <div class="flex justify-center self-center">
    <div class="p-12 bg-white mx-auto rounded-2xl w-100">
      <div class="flex flex-col items-center justify-center align-center mb-5">
        <div class="h-14 w-14">
          <%= image_tag("Logo.png") %>
        </div>
        <div class="mt-3 text-9x1 text-purple-500 text-center font-bold">
          SIREN
        </div>

        <div class="mt-4 mb-5 italic text-gray-500 text-center">
          Explore the depths of the <strong>Market</strong>.
        </div>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="flex">
              <div class="w-full px-3 mb-1">
                <%= f.label :name, class:"text-x1 font-semibold" %>
              <div class="flex">
                <div class="w-10 z-10 pl-1 text-center pointer-events-none flex items-center justify-center">‚úçÔ∏è</div>
                <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "w-full -ml-10 pl-10 pr-3 py-1 rounded-lg border-2 border-gray-200 outline-none focus:border-indigo-500", placeholder:"John" %>
                </div>
              </div>
            </div>

            <div class="flex">
              <div class="w-full px-3 mb-1">
                <%= f.label :surname, class:"text-x1 font-semibold" %>
              <div class="flex">
                <div class="w-10 z-10 pl-1 text-center pointer-events-none flex items-center justify-center">‚úçÔ∏è</div>
                <%= f.text_field :surname, autocomplete: "surname", class: "w-full -ml-10 pl-10 pr-3 py-1 rounded-lg border-2 border-gray-200 outline-none focus:border-indigo-500", placeholder:"Doe" %>
                </div>
              </div>
            </div>

            <div class="flex">
              <div class="w-full px-3 mb-1">
                <%= f.label :email, class:"text-x1 font-semibold" %>
              <div class="flex">
                <div class="w-10 z-10 pl-1 text-center pointer-events-none flex items-center justify-center">üìß</div>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full -ml-10 pl-10 pr-3 py-1 rounded-lg border-2 border-gray-200 outline-none focus:border-indigo-500", placeholder:"johndoe@gmail.com" %>
                </div>
              </div>
            </div>

            <div class="flex">
              <div class="w-full px-3 mb-1">
                <%= f.label :password, class:"text-x1 font-semibold" %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
            <div class="flex">
                <div class="w-10 z-10 pl-1 text-center pointer-events-none flex items-center justify-center">üîë</div>
                <%= f.password_field :password, autocomplete: "new-password", class:"form-control w-full -ml-10 pl-10 pr-3 py-1 rounded-lg border-2 border-gray-200 outline-none focus:border-indigo-500", placeholder:"******" %>
                </div>
              </div>
            </div>

            <div class="flex">
              <div class="w-full px-3 mb-1">
                <%= f.label :password_confirmation, class:"text-x1 font-semibold" %>
                <div class="flex">
                <div class="w-10 z-10 pl-1 text-center pointer-events-none flex items-center justify-center">üîê</div>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control w-full -ml-10 pl-10 pr-3 py-1 rounded-lg border-2 border-gray-200 outline-none focus:border-indigo-500", placeholder:"******" %>
                </div>
              </div>
            </div>

            <div class="flex">
              <div class="w-full px-3 mb-5">
                <%= f.label :balance, class:"text-x1 font-semibold" %>
                <div class="flex">
                <div class="w-10 z-10 pl-1 text-center pointer-events-none flex items-center justify-center">üí∞</div>
                <%= f.number_field :balance, step: :any, class:"form-control w-full -ml-10 pl-10 pr-3 py-1 rounded-lg border-2 border-gray-200 outline-none focus:border-indigo-500", placeholder:"$1000" %>
                </div>
              </div>
            </div>
          
            <%= f.hidden_field :approved, value: false %>

            <div class="text-center">
              <%= f.submit "Sign up", class:"w-full py-2 px-4 rounded-lg bg-indigo-600 text-white hover:bg-green-dark focus:outline-none cursor-pointer" %>
            </div>

            <div class="flex flex-col justify-center items-center mt-3">
            <div>
              <%= link_to "Already have an account?", new_session_path(resource_name), class: "text-gray-400 hover:text-green-800 text-sm font-semibold" %>
            </div>
          </div>

        <% end %>
    </div>
  </div>
</div>
