<div class="min-h-screen bg-gradient-to-br from-green-300 via-blue-500 to-purple-600 flex justify-center items-center">
  <div class="flex justify-center self-center">
    <div class="p-12 bg-white mx-auto rounded-2xl w-100">
      <div class="flex flex-col items-center justify-center align-center mb-5">
        <div class="h-14 w-14">
          <img src ="https://i.imgur.com/djc0DOV.png" alt="">
        </div>
          <div class="mt-3 text-9x1 text-purple-500 text-center font-bold">
            SIREN
          </div>
          
          <div class="mt-2 mb-5 italic text-gray-500 text-center">
            Explore the depths of the <strong>Market</strong>.
          </div>
          <% if alert %>
            <p class="alert alert-danger text-center text-red-500 font-bold mb-2 p-2 rounded-lg border-2 border-red-500"><%= alert %></p>
          <% end %>
    <div class="-mt-2 mb-4 rounded border-2 border-red-500 p-2 font-bold text-red-500">Forgot your password?</div>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <div class="w-full px-3 mb-2">
          <%= f.label :email, class:"text-x1 font-semibold" %>
        </div>
        <div class= "flex">
          <div class= "w-10 z-10 pl-1 text-center pointer-events-none flex items-center justify-center">ðŸ“§</div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full -ml-10 pl-10 pr-3 py-1 rounded-lg border-2 border-gray-200 outline-none focus:border-indigo-500", placeholder:"johndoe@gmail.com" %>
          </div>
        </div>
      </div>

      <div class="flex justify-center mt-5">
        <div>
          
          <%= f.submit "Send me my reset password instructions", class:"w-full py-2 px-4 rounded-lg bg-indigo-600 text-white hover:bg-green-dark focus:outline-none cursor-pointer" %>
        </div>
      </div>

      <div class="flex flex-col justify-center items-center mt-5 text-center text-md text-gray-500">
        <div>
          <%= link_to "Remember your password?", new_session_path(resource_name), class: "text-gray-400 hover:text-green-800 text-sm font-semibold" %>
        </div>
      </div>
    <% end %>
    
    </div>
    </div>
  </div>
</div>
