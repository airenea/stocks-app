<div class="min-h-screen bg-gradient-to-br from-green-300 via-blue-500 to-purple-600 flex justify-center items-center">
  <div class="flex justify-center self-center">
    <div class="p-12 bg-white mx-auto rounded-2xl w-100 ">
      <div class="flex flex-col items-center justify-center align-center mb-5">
        <div class="mb-1 h-14 w-14">
          <img src ="https://i.imgur.com/djc0DOV.png" alt="">
        </div>
        <div class="mt-3 text-9x1 text-purple-500 text-center font-bold">
          SIREN
        </div>
        <div class="mt-2 mb-4 italic text-gray-500 text-center text-x1">
          Explore the depths of the <strong>Market</strong>.
        </div>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class="flex">
              <div class="w-full px-3 mb-2">
                <%= f.label :email, class:"text-x1 font-semibold" %>
              <div class="flex">
                <div class="w-10 z-10 pl-1 text-center pointer-events-none flex items-center justify-center">ðŸ“§</div>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full -ml-10 pl-10 pr-3 py-1 rounded-lg border-2 border-gray-200 outline-none focus:border-indigo-500", placeholder:"johndoe@gmail.com" %>
                </div>
              </div>
            </div>

            <div class="flex">
              <div class="w-full px-3 mb-2">
                <%= f.label :password, class:"text-x1 font-semibold" %>
              <div class="flex">
                <div class="w-10 z-10 pl-1 text-center pointer-events-none flex items-center justify-center">ðŸ”‘</div>
                <%= f.password_field :password, autocomplete: "current-password", class: "w-full -ml-10 pl-10 pr-3 py-1 rounded-lg border-2 border-gray-200 outline-none focus:border-indigo-500", placeholder:"******" %>
                </div>
              </div>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="flex items-center justify-between mt-2">
                <div class="flex items-center">
                  <%= f.check_box :remember_me, class: "ml-3 h-4 w-4 focus:ring-blue-400 border-gray-300 rounded cursor-pointer" %>
                  <%= f.label :remember_me, class: "ml-1 block text-sm text-gray-800" %>
                </div>
                <div class="text-xs">
                <%= link_to "Forgot your password?", new_password_path(resource_name), class: "ml-2 text-gray-400 hover:text-green-800 font-semibold" %>
                </div>
              </div>
            <% end %>

            <div class="flex justify-center mt-5">
              <div>
                <%= f.submit "Log in", class:"w-full py-2 px-4 rounded-lg bg-indigo-600 text-white hover:bg-green-dark focus:outline-none cursor-pointer" %>
              </div>
            </div>

            <div class="flex flex-col justify-center items-center mt-3">
              <div>
                <%= link_to "Haven't signed up?", new_registration_path(resource_name), class: "text-gray-400 hover:text-green-800 text-sm font-semibold" %>
              </div>
            </div>

        <% end %>
    </div>
  </div>
</div>
