<%= form_with model: @regular do |form| %>
    <div>
      <%= form.label :name %><br>
      <%= form.text_field :name %>
    </div>
  
    <div>
      <%= form.label :surname %><br>
      <%= form.text_area :surname %><br>
    </div>

    <div>
      <%= form.label :approved %><br>
      <%= form.check_box :approved %><br>
    </div>
  
    <div>
      <%= form.submit %>
    </div>
  <% end %>
  