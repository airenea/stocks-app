<%= form_with model: @regular do |form| %>
    <div>
      <%= form.label :name %><br>
      <%= form.text_field :name %>
    </div>
  
    <div>
      <%= form.label :surname %><br>
      <%= form.text_field :surname %><br>
    </div>

    <div>
      <%= form.label :email %><br>
      <%= form.text_field :email %>
    </div>

    <div>
      <%= form.label :balance %><br>
      <%= form.number_field :balance %><br>
    </div>

    <div>
      <%= form.label :approved %><br>
      <%= form.check_box :approved %><br>
    </div>
  
    <div>
      <%= form.submit %>
    </div>
  <% end %>
  