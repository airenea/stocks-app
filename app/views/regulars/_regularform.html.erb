<div>
<div class="flex container h-20 bg-green-900 flex-wrap content-center justify-center text-white">
    <div class="text-center">Update User<br /><%=link_to "Exit", @regular%></div>
</div>
<div class="bg-white pt-10 w-full">
<%= form_with(model: @regular) do |form| %>
  <% if @regular.errors.any? %>
    <div class="form-alert-error"><div style="font-family: 'Varela Round'; padding: 3%;'">Sorry!</div>
      <ul>
        <% @regular.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
      <div style="font-family: 'Varela Round'; padding: 3%;">Try again!</div>
    </div> 
  <% end %>

    <div class="md:flex md:items-center mb-6">
        <div class="md:w-1/3">
        <label class="block text-green-500 font-bold md:text-right mb-1 md:mb-0 pr-4 ml-20">
            <%= form.label :email %>
        </label>
        </div>
        <div class="bg-white appearance-none border-2 border-gray-200 rounded w-72 py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500 mr-20">
            <%= form.text_field :email %>
        </div>
    </div>

    <div class="md:flex md:items-center mb-6">
        <div class="md:w-1/3">
        <label class="block text-green-500 font-bold md:text-right mb-1 md:mb-0 pr-4 ml-20">
            <%= form.label :name %>
        </label>
        </div>
        <div class="bg-white appearance-none border-2 border-gray-200 rounded w-72 py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500 mr-20">
            <%= form.text_field :name %>
        </div>
    </div>
    
    <div class="md:flex md:items-center mb-6">
        <div class="md:w-1/3">
        <label class="block text-green-500 font-bold md:text-right mb-1 md:mb-0 pr-4 ml-20">
            <%= form.label :surname %>
        </label>
        </div>
        <div class="bg-white appearance-none border-2 border-gray-200 rounded w-72 py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500 mr-20">
            <%= form.text_field :surname %>
        </div>
    </div>

    <div class="md:flex md:items-center mb-6">
        <div class="md:w-1/3">
        <label class="block text-green-500 font-bold md:text-right mb-1 md:mb-0 pr-4">
            <%= form.label :approved %>
        </label>
        </div>
        <div class="bg-white appearance-none border-2 border-gray-200 rounded w-72 py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500 ">
            <%= form.check_box :approved %>
        </div>
    </div>

    <div class="flex container flex-wrap content-center justify-center">
        <button class="bg-green-500 bg-green-500 hover:bg-green-400 focus:shadow-outline focus:outline-none text-green-900 font-bold py-2 px-4 rounded mb-10">
            <%= form.submit "Edit User" %>
        </button>
    </div>
<% end %>
</div>
</div>